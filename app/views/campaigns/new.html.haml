.row
  .small-12.columns
    %h4 New Campaign for #{@client.name}
    = form_for @campaign, url: {action: "create"} do |campaign_form|
      - if @campaign.errors.any?
        %ul
          - @campaign.errors.full_messages.each do |msg|
            %li= msg
      = campaign_form.label :campaign_name
      = campaign_form.text_field :name

      - @client_channels.each do |client_channel|
        %h4 Campaign on #{name(client_channel)} ?
        
        = campaign_form.fields_for :campaign_channels do |campaign_channel|
          = campaign_channel.label "Unique ID"
          = campaign_channel.hidden_field :client_channel_id, value: client_channel.id
          = campaign_channel.text_field :uid

      = campaign_form.submit "Add Campaign", class: 'button small'
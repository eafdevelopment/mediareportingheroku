.row
  .small-12.columns.searched
    %h2 #{@client.name} Report
    %h4 Summary of your search
    %table#metrics-table
      %thead
        %tr
          %th Client
          %th Campaign Name
          %th Channel(s)
          %th From
          %th To
      %tbody
        %tr
          %td= @client.name
          %td= @campaign.name
          - params[:channel].each do |channel|
            %td= channel.split('::').last
          %td= params[:date_from]
          %td= params[:date_to]

    %h4 #{params[:channel].first.split('::').last} summary metrics
    - if @summary_report.any?
      %table
        %tr
          - @summary_report[:header_row].each do |header_item|
            %th= header_item
        %tr
          - @summary_report[:summary_row].each do |item|
            %td.metric= item

    = link_to 'Download', reports_path(format: 'csv', client: @client.id, campaign: @campaign.id, channel: params[:channel], date_from: params[:date_from], date_to: params[:date_to]), class: 'small button eight-button'
.row
  .small-12.columns.client-back
    = link_to "← back to all clients", clients_path, id: 'back-link', class: 'client-link'

.row.showClient
  .large-6.columns
    %h3.eight-header.addCampaign-header Client Details

    %p
      Name:
      %span= @client.name
    %p
      Google Analytics View ID:
      %span= @client.google_analytics_view_id

    %p
      Client channels:
      - if @client.client_channels.any?
        %span= @client.client_channels.subclasses.map{|channel| channel.name.split('::').last }.join(", ")
      - else
        %span [None yet.]

    = link_to "Edit Client", edit_client_path(@client), class: 'button small eight-button'
    = link_to "Delete Client", client_path(@client), data: {confirm: "Are you sure?"}, :method => :delete, class: 'button small alert eight-button'
